# Application Configuration
aws_region   = "ap-southeast-1"
environment  = "dev"
domain_name  = "your-domain.com"
project_name = "internal-spa"

# Network Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Replace with your IP: ["YOUR_IP/32"]

# External Security Group (optional - leave empty to create new)
# external_sg_id = ""  # If you have an existing security group to reference

# Terraform Backend Configuration (choose one)
# Option 1: Terraform Cloud
# terraform_cloud_organization = "your-org-name"
# terraform_cloud_workspace = "your-workspace-name"

# Option 2: S3 Backend (uncomment and configure if using S3)
# terraform_backend_bucket = "your-terraform-state-bucket"
# terraform_backend_key    = "internal-spa/terraform.tfstate"
# terraform_backend_region = "ap-southeast-1"
